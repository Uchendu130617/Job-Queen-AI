# JobQuick AI - Production Environment Template
# Copy this file to .env and fill in your production values

# ========== DATABASE ==========
MONGO_URL="mongodb://localhost:27017"
DB_NAME="jobquick_production"

# ========== SECURITY ==========
# CRITICAL: Generate a strong JWT secret (use: openssl rand -hex 32)
JWT_SECRET="CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_MIN"

# Admin credentials - CHANGE IMMEDIATELY
ADMIN_EMAIL="admin@yourcompany.com"
ADMIN_PASSWORD="CHANGE_THIS_STRONG_PASSWORD"

# ========== AI CONFIGURATION ==========
EMERGENT_LLM_KEY="your-emergent-llm-key-here"
AI_PROVIDER="openai"  # Options: openai, anthropic, gemini
AI_MODEL="gpt-5.2"

# ========== CORS CONFIGURATION ==========
# Production: Set to your frontend domain
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# ========== FILE UPLOAD LIMITS ==========
MAX_UPLOAD_SIZE_MB=5
ALLOWED_EXTENSIONS=".pdf,.docx,.txt"

# ========== RATE LIMITING ==========
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========== EMAIL NOTIFICATIONS (Optional) ==========
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"
# FROM_EMAIL="noreply@jobquick.ai"

# ========== MONITORING (Optional) ==========
# SENTRY_DSN=""
# LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========== FEATURE FLAGS ==========
ENABLE_SIGNUP=true
REQUIRE_EMAIL_VERIFICATION=false
AUTO_APPROVE_EMPLOYERS=false  # Set to true for instant approval
AUTO_APPROVE_JOBS=false  # Set to true to skip moderation

# ========== BUSINESS CONFIGURATION ==========
FREE_TIER_CREDITS=10
PROFESSIONAL_TIER_CREDITS=100
ENTERPRISE_TIER_CREDITS=500

PROFESSIONAL_PRICE=49
ENTERPRISE_PRICE=199
FEATURED_JOB_PRICE=99
